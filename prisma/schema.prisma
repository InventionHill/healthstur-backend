generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Program {
  id               String   @id @default(uuid())
  isActive         Boolean  @default(true)
  order            Int      @default(0)
  name             String
  icon             String?
  iconColor        String?
  href             String
  heading          String
  subtext          String   @db.Text
  background       String?
  homeHeading      String?
  homeSubtext      String?  @db.Text
  homeBackground   String?
  solutionsHeading String?
  solutionsSubtext String?  @db.Text
  bullets          Json
  subItems         Json
  solutions        Json     @default("[]")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Curated Track Fields
  isCurated          Boolean  @default(false)
  curatedTitle       String?
  curatedDescription String?  @db.Text
  curatedImage       String?
  curatedIcon        String?
  curatedIconWidth   Int      @default(30)
  curatedIconHeight  Int      @default(30)
  curatedLinkText    String?

  @@map("programs")
}



model Faq {
  id        String   @id @default(uuid())
  question  String
  answer    String   @db.Text
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("faqs")
}

model Testimonial {
  id        String   @id @default(uuid())
  name      String
  role      String
  image     String?
  quote     String   @db.Text
  stars     Int      @default(5)
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

model Resource {
  id              String   @id @default(uuid())
  title           String
  slug            String   @unique
  heroTitle       String
  heroDescription String   @db.Text
  heroImage       String?
  stepsTitle      String?
  steps           Json     @default("[]")
  isActive        Boolean  @default(true)
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("resources")
}

model Service {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("services")
}

model CompanyInfo {
  id             String   @id @default(uuid())
  email          String?
  phone          String?
  address        String?  @db.Text
  workingHours   String?
  facebookUrl    String?
  instagramUrl   String?
  twitterUrl     String?
  youtubeUrl     String?
  mapUrl         String?  @db.Text
  updatedAt      DateTime @updatedAt

  @@map("company_info")
}

model Consultation {
  id        String   @id @default(uuid())
  fullName  String
  email     String
  contactNo String
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())

  @@map("consultations")
}

model Application {
  id               String   @id @default(uuid())
  fullName         String
  mobileNumber     String
  email            String?
  height           String
  weight           String
  age              String
  medicalCondition String?  @db.Text
  allergies        String?  @db.Text
  goal             String
  duration         String
  routine          String   @db.Text
  selectedProgram  String?
  createdAt        DateTime @default(now())

  @@map("applications")
}

model Feedback {
  id        String   @id @default(uuid())
  orderId   String
  fullName  String
  email     String
  subject   String
  message   String   @db.Text
  rating    Int
  createdAt DateTime @default(now())

  @@map("feedback")
}

model RefundPolicy {
  id          String   @id @default(uuid())
  title       String?
  description String?  @db.Text
  content     String   @db.LongText
  updatedAt   DateTime @updatedAt

  @@map("refund_policy")
}

model PrivacyPolicy {
  id          String   @id @default(uuid())
  title       String?
  description String?  @db.Text
  content     String   @db.LongText
  updatedAt   DateTime @updatedAt

  @@map("privacy_policy")
}

model TermsPolicy {
  id          String   @id @default(uuid())
  title       String?
  description String?  @db.Text
  content     String   @db.LongText
  updatedAt   DateTime @updatedAt

  @@map("terms_policy")
}

model SuccessStoryCategory {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stories   SuccessStory[]

  @@map("success_story_categories")
}

model SuccessStory {
  id           String   @id @default(uuid())
  name         String
  categoryId   String
  category     SuccessStoryCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  image        String
  quote        String   @db.Text
  achievements Json     @default("[]")
  shift        String   @db.Text
  isActive     Boolean  @default(true)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("success_stories")
}
model Visitor {
  id        String   @id @default(uuid())
  ip        String
  userAgent String   @db.Text
  createdAt DateTime @default(now())

  @@map("visitors")
}

model PricingDuration {
  id        String        @id @default(uuid())
  name      String
  order     Int           @default(0)
  isActive  Boolean       @default(true)
  plans     PricingPlan[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("pricing_durations")
}

model PricingPlan {
  id          String          @id @default(uuid())
  durationId  String
  duration    PricingDuration @relation(fields: [durationId], references: [id], onDelete: Cascade)
  name        String
  description String          @db.Text
  price       String
  features    Json            @default("[]")
  support     Json            @default("[]")
  positioning Json            @default("[]")
  icon        String
  highlighted Boolean         @default(false)
  buttonText  String          @default("BUY NOW")
  image       String
  order       Int             @default(0)
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("pricing_plans")
}
