generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Program {
  id          String   @id @default(uuid())
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  name        String
  icon        String?
  iconColor   String?
  href            String
  heading         String
  subtext         String   @db.Text
  background      String?
  homeHeading     String?
  homeSubtext     String?  @db.Text
  homeBackground  String?
  solutionsHeading String?
  solutionsSubtext String? @db.Text
  bullets     Json
  subItems    Json
  solutions   Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("programs")
}
